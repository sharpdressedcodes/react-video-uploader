{
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom", "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        // "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        "outDir": "./build/",
        "resolveJsonModule": true,
        // "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": [
        ".idea",
        ".vscode",
        ".github",
        ".husky",
        "build",
        "cypress-cache",
        "docker",
        "hooks",
        "**/node_modules/**",
        // remove Cypress config as it causes collisions with Jest
        // https://github.com/cypress-io/cypress/issues/22059
        // Eg: expect(1 + 1).toBe(2);
        // TS2339: Property 'toBe' does not exist on type 'Assertion'.
        "./cypress.config.js"
    ],
    "include": [
//        "src/**/*",
//        "tests/**/*",
        "./**/*",
        "custom.d.ts"
    ]
}
